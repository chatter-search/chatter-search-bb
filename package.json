{
  "name": "chatter-search-web",
  "version": "1.0.0",
  "description": "Client for chatter search API",
  "author": "Dmitrii Lapshukov<lapshukov@gmail.com>",
  "scripts": {
    "clean": "rm -rf build",
    "compile-templates": "mkdir -p build/scripts && handlebars --amd -e hbs -c -f build/scripts/__templates.js src/tmpl/*.hbs",
    "compile-styles": "mkdir -p build/styles && node-sass src/styles/ -r -o build/styles",
    "build-scripts": "tasks/build-scripts.sh",
    "build-index": "tasks/build-index.sh",
    "optimize": "tasks/optimize.sh",
    "deploy": "firebase deploy",
    "build": "npm run build-index && npm run build-scripts && npm run compile-templates && npm run compile-styles"
  },
  "license": "ISC",
  "dependencies": {
    "backbone": "1.3.3",
    "handlebars": "4.0.5",
    "jquery": "2.2.3",
    "node-sass": "3.4.2",
    "requirejs": "2.1.22"
  }
}
