{{#if name}}
	<div class="profile-card">
		{{#if profile_image_url_https}}
			<img src="{{profile_image_url_https}}" alt="{{name}}" />
		{{/if}}
		<div>{{name}}<span>@{{screen_name}}</span></div>
		{{#if description}}<div class="profile-description">{{description}}</div>{{/if}}
	</div>
{{else}}
    <div class="user-timeline-items">
        <section class="user-timeline-item">
            <div class="user-timeline-text">Nothing found.</div>
            <div class="clear"></div>
        </section>
    </div>
{{/if}}
